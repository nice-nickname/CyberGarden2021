<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>
<body>
    <header class="logoHeader">
        <div class="logo">
            <div class="logo__blockImg">
                <img class="logo__img" src="/image/logo.png" alt="Логотип">
            </div>
            <h1 class="logo__title">project taganrog.arg</h1>
        </div>
    </header>
    <section class="main">
        <div class="login">
            <p class="login__title">Для продолжения <br>введите Вашу почту:</p>
            <input class="login__input" type="text" placeholder="example@.ru">
            {{#if user.verified}}
                <button class="login__Btn" onclick="direct()">Войти</button>
            {{else}}
                <button class="login__Btn" onclick="send()">Войти</button>
            {{/if}}

        </div>
    </section>
    <footer></footer>
</body>
<script>

    {{#if user}}
        window.location.replace('/start/modules')
    {{/if}}

    let send = () => {
        let val = document.querySelector('.login__input').value
        console.log(val)
        fetch(`/auth/login?email=${val}&password=1`, {
            method: 'POST',
            body: {
                email: val,
                password: 1
            }
        })
    }
    
    let direct = () => {
        window.location.replace('/start/modules')
    }

</script>
</html>